{
  "extends": "../tsconfig.shared.json",
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "../../out/scripts",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "esnext",
    "skipLibCheck": true,
    "lib": ["ES2023", "WebWorker", "DOM"]
  },
  "include": [
    ".",
    "./**/*.json",
    "../src/**/*.ts",
    "../src/**/*.json",
    "../code_suggestions_config.json"
  ],
  "exclude": ["../src/**/*.test.ts", "../src/tests/**/*"]
}
